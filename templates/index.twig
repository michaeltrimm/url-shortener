{% extends "layout.html" %}
{% block body %}

<div class="container">
  <div align="center">{% include "logo.twig" %}</div>
  <h1 align="center">URL Shortener</h1>
  
  <form class="form-horizontal" method="post" action="/new">
    <label class="control-label" for="url">URL You Want To Shorten</label>
    <input type="text" name="url" class="form-control" autofocus required>
    <br>
    <div align="center">
      <input type="submit" class="btn btn-danger btn-lg" value="Shorten URL">
      <input type="hidden" name="{{ csfr_nameKey }}" value="{{ csfr_name }}">
      <input type="hidden" name="{{ csfr_valueKey }}" value="{{ csfr_value }}">
    </div>
  </form>

</div>

{% endblock %}